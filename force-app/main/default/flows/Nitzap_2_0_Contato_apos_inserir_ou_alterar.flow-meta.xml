    <formulas>
        <name>Celular</name>
        <dataType>String</dataType>
        <expression>IF(
    AND(
       ({!$Record.MailingCountry}) = &quot;BR&quot; || len(({!$Record.MailingCountry})) = 0 ,
        NOT(
            OR(
                BEGINS({!$Record.Phone}, &quot;+55&quot;),
                BEGINS({!$Record.Phone}, &quot;55&quot;)
            )
        )
    ),
    &quot;55&quot; &amp; {!$Record.Phone},
    {!$Record.Phone}
)</expression>
    </formulas>
    <formulas>
        <name>CelularLimpo</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE(
SUBSTITUTE(
    SUBSTITUTE(
        SUBSTITUTE(
            SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE({!Celular}, &quot;(&quot;, &quot;&quot;), &quot;)&quot;, &quot;&quot;), &quot;-&quot;, &quot;&quot;), &quot; &quot;, &quot;&quot;), &quot;.&quot;, &quot;&quot;), &quot;/&quot;, &quot;&quot;),&quot;+&quot;, &quot;&quot;)</expression>
    </formulas>
